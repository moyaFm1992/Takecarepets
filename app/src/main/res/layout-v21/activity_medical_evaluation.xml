<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MedicalEvaluationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblEvaluacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/evaluacion"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/imgPerroEvaluacion"
                    android:layout_width="400dp"
                    android:layout_height="190dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/desc"

                    android:padding="1dp" />

                <ImageButton
                    android:id="@+id/imgBtnCameraEvaluacion"
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal|end"
                    android:layout_marginStart="-80dp"
                    android:layout_marginTop="100dp"
                    android:layout_toEndOf="@+id/imgPerroEvaluacion"
                    android:background="@drawable/input"
                    android:contentDescription="@string/desc"
                    app:srcCompat="@drawable/camara" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/lblMascotaEvaluacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="@string/descripcionGeneral"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTMLEstadoInicial"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:textSize="12sp"
                    android:gravity="start|top"
                    android:hint="@string/descripci_n"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/lblFracturas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="@string/fracturas"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp">

            <RadioGroup
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbSiEvaluacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/si"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rbNoEvaluacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:textSize="12sp" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTMTFracturas"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="@string/describa"
                    android:inputType="textMultiLine"
                    android:paddingStart="5dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="12sp" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/lblTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="@string/tipo"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtEdadEvaluacion"
                        android:layout_width="108dp"
                        android:layout_height="match_parent"
                        android:hint="@string/edad_aproximada"
                        android:paddingStart="5dp"
                        android:textSize="12sp"
                        android:autofillHints="" />

                    <RadioButton
                        android:id="@+id/rbAdultoEvaluacion"
                        android:layout_width="123dp"
                        android:layout_height="match_parent"
                        android:text="@string/adulto"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/rbCachorroEvaluacion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/cachorro"
                        android:textSize="12sp" />
                </RadioGroup>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbGrandeEvaluacion"
                        android:layout_width="108dp"
                        android:layout_height="match_parent"
                        android:text="@string/grande"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/rbMedianoEvaluacion"
                        android:layout_width="123dp"
                        android:layout_height="match_parent"
                        android:text="@string/mediano"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/rbPequenoEvaluacion"
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:text="@string/pequeno"
                        android:textSize="12sp" />

                </RadioGroup>

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/rbMachoEvaluacion"
                        android:layout_width="108dp"
                        android:layout_height="match_parent"
                        android:text="@string/macho"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/rbHembraEvaluacion"
                        android:layout_width="123dp"
                        android:layout_height="match_parent"
                        android:text="@string/hembra"
                        android:textSize="12sp" />


                </RadioGroup>


            </TableRow>


        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="10dp">


        </LinearLayout>

        <TextView
            android:id="@+id/lblMedicamentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="@string/medicamentos"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/cbxDrontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drontal"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/cbxRimadyltal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rimadyltal"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/cbxPipeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pipeta"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/cbxEmulgel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/emulgel"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/cbxMeloxic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/meloxic"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/cbxBrillo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/brillo"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/cbxCoccigan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coccigan"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/cbxSuero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/suero"
                        android:textSize="12sp" />

                </TableRow>
            </TableLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/lblVacunas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="@string/vacunas"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/cbxMoquillo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/moquillo"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/cbxHepatitis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hepatitis"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/cbxParvovirosis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/parvovirosis"
                        android:textSize="12sp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <CheckBox
                        android:id="@+id/cbxLeptospirosis"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/leptospirosis"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/cbxTos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/tos"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/cbxRabia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rabia"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <CheckBox
                        android:id="@+id/cbxBabesiosis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/babesiosis"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/cbxLyme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lyme"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/cbxLeishmaniasis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/leishmaniasis"
                        android:textSize="12sp" />

                </TableRow>


            </TableLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtOtrosMedicamentos"
                android:layout_width="401dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:gravity="start|top"
                android:hint="@string/otrosMedicamentos"
                android:inputType="textMultiLine"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:textSize="12sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/lblObservacionGeneral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text="@string/observacionGeneral"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            tools:ignore="RtlSymmetry">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="133dp"
                        android:layout_height="50dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtTiempo"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:autofillHints=""
                            android:hint="@string/tiempo"
                            android:inputType="textMultiLine"
                            android:paddingStart="5dp"
                            android:paddingLeft="5dp"
                            android:textSize="12sp"
                            tools:ignore="RtlSymmetry" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <CheckBox
                        android:id="@+id/cbxAdoptable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/adoptable"
                        android:textSize="12sp" />
                </TableRow>


            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eTMLTObservaciones"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint="@string/observacionGeneral"
                        android:inputType="textMultiLine"
                        android:orientation="horizontal"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingRight="10dp"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/simpleProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:visibility="gone" />

            <Button
                android:id="@+id/btnGuardarEvaluacion"
                android:layout_width="196dp"
                android:layout_height="match_parent"
                android:drawablePadding="8dp"
                android:paddingStart="5dp"
                android:text="@string/guardar"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:onClick="onClick"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/cancelar"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>