<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:textAlignment="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgListPerroAdoptar"
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        card_view:civ_border_color="@color/colorPrimaryDark"
                        card_view:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/lstEstadoAdoptar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical|center"
                        android:textAlignment="center"
                        android:hint="Estado"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lstAdoptante"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/imgListPerroEvaluacion"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/lstTelefono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lstCedula"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/imgListPerroEvaluacion"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lstDireccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lstTelefono"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/imgListPerroEvaluacion"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lstSolicitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lstDireccion"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/imgListPerroEvaluacion"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorPrimaryDark" />
    </androidx.cardview.widget.CardView>

</LinearLayout>